<Window x:Class="Bluebird_For_Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bluebird_For_Windows"
        mc:Ignorable="d"
        Title="Bluebird For Windows" Height="450" Width="800">
    <Grid>
        <TextBlock Name="pogbox" HorizontalAlignment="Center" Margin="0,36,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="284" Height="144"/>
        <ComboBox Name="pogcheck" HorizontalAlignment="Center" Margin="0,231,0,0" VerticalAlignment="Top" Width="284" Loaded="pogcheck_Loaded" PreviewMouseDown="pogcheck_Click" SelectionChanged="pogcheck_SelectionChanged"/>
        <Button Content="Go!" HorizontalAlignment="Center" Margin="0,308,0,0" VerticalAlignment="Top" Height="40" Width="125" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Center" Text="Please select a game." TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="124" Margin="0,204,0,0"/>
        <ProgressBar Name="pogbar" HorizontalAlignment="Center" Height="10" Margin="0,268,0,0" VerticalAlignment="Top" Width="284"/>
    </Grid>
</Window>
